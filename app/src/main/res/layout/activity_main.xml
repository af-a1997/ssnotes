<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp" >
        <Button
            android:id="@+id/btn_new_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="New"
            android:drawableLeft="@drawable/ic_baseline_note_add_24"
            android:backgroundTint="@color/dk_green"
        />
        <Button
            android:id="@+id/btn_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Delete all notes"
            android:drawableLeft="@drawable/ic_baseline_delete_sweep_24"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/scarlet"
        />
    </TableRow>

    <ListView
        android:id="@+id/list_notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/wsapi_datetime"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:fontFamily="monospace"
        android:textColor="@color/dk_orange"
        android:textStyle="bold"
        android:gravity="center" />
</LinearLayout>